Helpers
	any_charactar = [0 .. 0xffff] ;
	letter = [['a' .. 'z'] + ['A' .. 'Z']] ;
	digit = ['0' .. '9'] ;
	str_character = (letter|digit|'_'|','|';'|':'|'.'|'\'')* ;
	colon = ':' ;
	semicolon = ';' ;
	comma = ',' ;
	plus = '+' ;
	minus = '-' ;
	mul = '*' ;
	fwd_slash = '/' ;
	l_paren = '(' ;
	r_paren = ')' ;
	lt = '<' ;
	lteq = '<=' ;
	gt = '>' ;
	gteq = '>=' ;
	neq = '!=' ;
	eq = '=' ;
	assign = ':=' ;
	l_brack = '{' ;
	r_brack = '}' ;

Tokens
	comment = ('⁄⁄' any_character* '\n') | ('/*' + any_character* + '*/') ;
	blank = (' ' | 10 | 13 | 9)*;
	identifier = (letter | '_')* + (letter | '_' | digit)* ;
	
	integer = digit+;
	float = digit+ + '.' + digit+ ;
	bool = (t r u e) | (f a l s e) ;
	string = '"' + str_character + '"' ;
	
	keyword_string = 'string' ;
	keyword_integer = 'integer' ;
	keyword_for = 'for' ;
	keyword_bool = 'bool' ;
	keyword_float = 'float' ;
	keyword_global = 'global' ;
	keyword_not = 'not' ;
	keyword_in = 'in' ;
	keyword_program = 'program' ;
	keyword_out = 'out' ;
	keyword_procedure = 'procedure' ;
	keyword_if = 'if' ;
	keyword_begin = 'begin' ;
	keyword_then = 'then' ;
	keyword_return = 'return' ;
	keyword_else = 'else' ;
	keyword_end = 'end' ;

Ignored Tokens
	comment ;
	blank ;
	
Productions